@model IEnumerable<consumo_de_api.Models.CharacterModel>

@{
    ViewBag.Title = "CharacterIndex";
}
<section>
    <h2>Character's of Breaking Bad</h2>

    <div class="characters">
        @foreach (var item in Model)
        {
            <div class="character">
                <div class="character-name">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>

                <div class="character-img">
                    <img src="@item.img" />
                </div>

                <div class="character-details">
                    <div class="character-details-nickname">
                        <span>Nickname</span>
                        @Html.DisplayFor(modelItem => item.nickname)
                    </div>
                    <div class="character-details-birthday">
                        <span>Birthday: </span>
                        @Html.DisplayFor(modelItem => item.birthday)
                    </div>
                    <div class="character-details-status">
                        <span>Status: </span>
                        @Html.DisplayFor(modelItem => item.status)
                    </div>
                </div>

            </div>
        }
    </div>
</section>

<style>


    section {
        width: 80%;
        margin: 0 auto;
        padding: 10px;
        
        text-align: center;
    }

    section h2{
        color: white;
    }
    
    .characters{
        width: 100%;
        padding: 20px;

        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }

    .character{
        width: 250px;
        height: 400px;
        margin: 30px 0;

        display: flex;
        flex-direction: column;
    }

    .character .character-name {
        padding: 10px 0;
        background-color: antiquewhite;
    }

    .character .character-img img {
        width: 250px;
        height: 300px;
        object-fit: fill;
    }

    .character-details {
        padding: 10px 0;
        background-color: antiquewhite;
    }

</style>